#include <iostream>
#include <cmath>

using namespace std;

int main() {
    // Заданные константы
    const double x = 1.426;
    const double y = -1.22;
    const double z = 3.5;

    // Вычисление значений по формулам
    double a = 2 * cos(x - M_PI / 6);
    double b_variant = 0.5 + pow(sin(y), 2);
    double c = 1 + (pow(z, 2) / (3 + (pow(z, 2) / 5)));

    // Вывод исходных данных
    cout << "Исходные данные:" << endl;
    cout << "x = " << x << endl;
    cout << "y = " << y << endl;
    cout << "z = " << z << endl;

    // Вывод результатов вычислений
    cout << "\nРезультаты вычислений:" << endl;
    cout << "a = 2 * cos(x - π/6) = " << a << endl;
    cout << "b = 1/2 + sin²(y) = " << b_variant << endl;
    cout << "c = 1 + z² / (3 + z²/5) = " << c << endl;

    return 0;
}
