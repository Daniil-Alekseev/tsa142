#include <iostream>
#include <limits> // Для проверки ввода

using namespace std;

int main() {
    double a, n;

    // Ввод длины стороны a с проверкой
    cout << "Введите длину стороны a (должно быть положительным числом): ";
    while (!(cin >> a) || a <= 0) {
        cin.clear(); // Сброс флага ошибки
        cin.ignore(numeric_limits<streamsize>::max(), '\n'); // Очистка буфера ввода
        cout << "Ошибка! Введите положительное число для a: ";
    }

    // Ввод коэффициента n с проверкой
    cout << "Введите коэффициент n (в %, например, 50 для 50%): ";
    while (!(cin >> n) || n <= 0) {
        cin.clear();
        cin.ignore(numeric_limits<streamsize>::max(), '\n');
        cout << "Ошибка! Введите положительное число для n: ";
    }

    // Вычисление второй стороны b (перевод процентов в десятичную дробь)
    double b = (n / 100) * a;

    // Вычисление площади и периметра
    double area = a * b;
    double perimeter = 2 * (a + b);

    // Вывод результатов
    cout << "\nРезультаты вычислений:" << endl;
    cout << "Длина стороны a: " << a << endl;
    cout << "Длина стороны b (n% от a): " << b << endl;
    cout << "Площадь прямоугольника: " << area << endl;
    cout << "Периметр прямоугольника: " << perimeter << endl;

    return 0;
}
