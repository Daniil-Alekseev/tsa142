#include <iostream>
#include <cmath> // Подключение библиотеки для математических функций (cos, sin, pow)

using namespace std; // Использование стандартного пространства имен

/**
 * Функция для вычисления значения 'a' по формуле: 2 * cos(x - π/6)
 * Параметры:
 *   x - входное значение типа double
 * Возвращает:
 *   Результат вычисления формулы
 */
double calculate_a(double x) {
    return 2 * cos(x - M_PI / 6); // Вычисление значения по формуле
}

/**
 * Функция для вычисления значения 'b' по формуле: 0.5 + sin²(y)
 * Параметры:
 *   y - входное значение типа double
 * Возвращает:
 *   Результат вычисления формулы
 */
double calculate_b(double y) {
    return 0.5 + pow(sin(y), 2); // Вычисление значения по формуле
}

/**
 * Функция для вычисления значения 'c' по формуле: 1 + z² / (3 + z²/5)
 * Параметры:
 *   z - входное значение типа double
 * Возвращает:
 *   Результат вычисления формулы
 */
double calculate_c(double z) {
    return 1 + (pow(z, 2) / (3 + (pow(z, 2) / 5))); // Вычисление значения по формуле
}

int main() {
    // Заданные константы
    const double x = 1.426; // Исходное значение x
    const double y = -1.22;  // Исходное значение y
    const double z = 3.5;    // Исходное значение z

    // Вычисление значений по формулам с использованием функций
    double a = calculate_a(x);       // Вызов функции для вычисления 'a'
    double b_variant = calculate_b(y); // Вызов функции для вычисления 'b'
    double c = calculate_c(z);       // Вызов функции для вычисления 'c'

    // Вывод исходных данных
    cout << "Исходные данные:" << endl; // Заголовок для вывода исходных данных
    cout << "x = " << x << endl;        // Вывод значения x
    cout << "y = " << y << endl;        // Вывод значения y
    cout << "z = " << z << endl;        // Вывод значения z

    // Вывод результатов вычислений
    cout << "\nРезультаты вычислений:" << endl; // Заголовок для вывода результатов
    cout << "a = 2 * cos(x - π/6) = " << a << endl;         // Вывод значения 'a'
    cout << "b = 1/2 + sin²(y) = " << b_variant << endl;    // Вывод значения 'b'
    cout << "c = 1 + z² / (3 + z²/5) = " << c << endl;      // Вывод значения 'c'

    return 0; // Завершение программы
}
